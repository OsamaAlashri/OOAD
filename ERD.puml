@startuml
entity User {
    + id: Long
    + username: String
    + password: String
    + email: String
}

entity Task {
    + id: Long
    + title: String
    + description: String
    + dueDate: Date
    + status: TaskStatus
}

entity TaskStatus {
    <<enumeration>>
    TO_DO
    IN_PROGRESS
    COMPLETED
}

entity Project {
    + id: Long
    + name: String
}

entity Notification {
    + id: Long
    + message: String
}

User ||--o{ Task : "assigned to"
Task ||--|| TaskStatus
Project ||--o{ Task : "has"
User ||--o{ Notification : "receives"
@enduml
